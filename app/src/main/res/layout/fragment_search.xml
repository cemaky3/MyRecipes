<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SearchFragment">


  <TextView
      android:id="@+id/greetings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:text="@string/greetings"
      android:textColor="@color/title_grey"
      android:textSize="12sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="start"
      app:layout_constraintTop_toBottomOf="@+id/greetings"
      app:layout_constraintStart_toStartOf="parent"
      android:text="@string/main_title_text"
      android:textColor="@color/titles_dark"
      android:textSize="24sp" />


  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/search_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/main_title">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/filter_Button"
        app:layout_constraintEnd_toStartOf="@+id/filter_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/round_style"
          android:backgroundTint="@color/light_grey"
          android:drawableStart="@drawable/ic_search"
          android:hint="Начните поиск"
          android:textColorHint="@color/light_grey" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/filter_Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter_main"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/popular_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pop_recipes"
        android:textColor="@color/titles_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_input_search" />

    <TextView
        android:id="@+id/button_more_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Еще..."
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_input_search"
        tools:ignore="TouchTargetSizeCheck" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/search_bar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/strawberry_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_pale"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/cinnamon_cardView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/strawberry_toast_card_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_strawberry_toast" />

        <TextView
            android:id="@+id/strawberry_card_mealtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakfast_mealtime"
            android:textColor="@color/blue_for_mealtimes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_strawberry" />

        <TextView
            android:id="@+id/card_mealtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Recipe_toast_strawberry_name"
            android:textColor="@color/titles_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/strawberry_card_mealtime" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:numStars="5"
            android:theme="@style/CustomRatingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_mealtime_title" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/strawberry_toast_card_isfavorite_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_mealtime_title" />

        <TextView
            android:id="@+id/strawberry_toast_card_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 калорий"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingBar" />

        <TextView
            android:id="@+id/strawberry_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time_card"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/strawberry_card_portions"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/strawberry_toast_card_calories"
            tools:layout_editor_absoluteY="175dp" />

        <TextView
            android:id="@+id/strawberry_card_portions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_serving_card"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/strawberry_card_time"
            app:layout_constraintTop_toBottomOf="@+id/strawberry_toast_card_calories" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_strawberry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="86dp" />


      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cinnamon_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_pale"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/strawberry_cardView"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cinnamon_toast_card_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cinnamon_toast" />

        <TextView
            android:id="@+id/cinnamon_card_mealtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakfast_mealtime"
            android:textColor="@color/blue_for_mealtimes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_cinnamon" />

        <TextView
            android:id="@+id/cinnamon_card_mealtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Recipe_toast_strawberry_name"
            android:textColor="@color/titles_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cinnamon_card_mealtime" />

        <RatingBar
            android:id="@+id/cinnamon_ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:numStars="5"
            android:theme="@style/CustomRatingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cinnamon_card_mealtime_title" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cinnamon_toast_card_isfavorite_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="@+id/cinnamon_toast_card_calories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cinnamon_card_mealtime_title" />

        <TextView
            android:id="@+id/cinnamon_toast_card_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 калорий"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cinnamon_ratingBar" />

        <TextView
            android:id="@+id/cinnamon_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_time_card"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/cinnamon_card_portions"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cinnamon_toast_card_calories" />

        <TextView
            android:id="@+id/cinnamon_card_portions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_serving_card"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cinnamon_card_time"
            app:layout_constraintTop_toBottomOf="@+id/cinnamon_toast_card_calories" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_cinnamon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="86dp" />


      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>